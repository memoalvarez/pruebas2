<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="hr_modulo_form_inherit" model="ir.ui.view">
    <field name="name">hr:modulo.form.inherit</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">

    <xpath expr="//notebook" position="inside">
      <page string="Documentos personales">
        <sheet>
              <group>
                  <group>
                    <field name="id_card_copy" string="Subir archivo" required="0" widget="many2many_binary"/>
                    <field name="acta_de_nacimiento" string="Subir archivo" required="0" widget="many2many_binary"/>
                    <field name="numero_de_seguro_social" string="Subir archivo" required="0" widget="many2many_binary"/>
                    <field name="driving_license" string="Subir archivo" required="0" widget="many2many_binary"/>
                    <field name="rfc" string="Subir archivo" required="0" widget="many2many_binary"/>
                    <field name="curp" string="Subir archivo" required="0" widget="many2many_binary"/>
                    <field name="carta_de_no_antecedentes_penales" string="Subir archivo" required="0" widget="many2many_binary"/>
                  </group>
                  <group>
                    <field name="comprobante_de_domicilio" string="Subir archivo" required="0" widget="many2many_binary"/>
                    <field name="comprobante_de_estudios" string="Subir archivo" required="0" widget="many2many_binary"/>
                    <field name="certificaciones" string="Subir archivo" required="0" widget="many2many_binary"/>
                    <field name="hoja_de_retencion_para_credito_infonavit" string="Subir archivo" required="0" widget="many2many_binary"/>
                    <field name="hoja_de_retencion_para_credito_fonacot" string="Subir archivo" required="0" widget="many2many_binary"/>
                    <field name="carta_de_recomendacion" string="Subir archivo" required="0" widget="many2many_binary"/>
                  </group>
              </group>
        </sheet>
      </page>
    </xpath>
    </field>
  </record>

</odoo>
